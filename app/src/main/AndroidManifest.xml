<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quiz_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_quiz"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".activites.ResultActivity"></activity>
        <activity android:name=".activites.ProfileActivity" />
        <activity
            android:name=".activites.QuestionActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activites.SignupActivity" />
        <activity android:name=".activites.LoginActivity" />
        <activity android:name=".activites.LoginIntro" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.MainActivity">

        </activity>
    </application>

</manifest>